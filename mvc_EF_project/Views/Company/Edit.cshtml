@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model mvc_EF_project.Models.Worker

@{
    ViewBag.Title = "Edit";
}
<h2>Edit Worker</h2>
<hr />
@using (Html.BeginForm()) { 
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @* 用HiddenFor函数储存当前要修改的记录的ID以便提交后找到对应的记录进行更新 *@
        @Html.HiddenFor(model=>model.ID) 
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class="control-lable col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model=>model.FirstName)
                @Html.ValidationMessageFor(model=>model.FirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Sex, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Sex)
                @Html.ValidationMessageFor(model => model.Sex)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Rating, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rating)
                @Html.ValidationMessageFor(model => model.Rating)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
               <input type="submit" value="提交"/>
            </div>
        </div>
    </div>
}
<hr />
<div>
    @Html.ActionLink("Back to List","Index")
</div>

